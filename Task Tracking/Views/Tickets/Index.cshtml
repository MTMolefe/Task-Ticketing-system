@model KanbanViewModel

@{
    ViewData["Title"] = "Kanban Board";
}

<h1>Kanban Board</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>

<div class="kanban-board">
    @{
        // Pass the title to the partial view via ViewData
        ViewData["Title"] = "Open";
        @Html.Partial("_KanbanColumn", Model.OpenTickets)
    }

    @{
        ViewData["Title"] = "In Progress";
        @Html.Partial("_KanbanColumn", Model.InProgressTickets)
    }

    @{
        ViewData["Title"] = "Resolved";
        @Html.Partial("_KanbanColumn", Model.ResolvedTickets)
    }

    @{
        ViewData["Title"] = "Blocker";
        @Html.Partial("_KanbanColumn", Model.BlockerTickets)
    }

    @{
        ViewData["Title"] = "Closed";
        @Html.Partial("_KanbanColumn", Model.ClosedTickets)
    }
</div>